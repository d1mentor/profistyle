	<div class="wrapper">
		<main class="main" style="margin-top: 100px;">
			<div class="blog">
				<div class="container">
					<% @posts.each do |post| %>
					  <% if check_valid_post_for_lang(post.text_ru, post.post_intro, post.name_ru) %>
					  <div class="news__el" style="padding-top: 1%; padding-bottom: 1%; padding-left: 15%; padding-right: 15%;">
						<div class="news__pic">
							<a href="<%= "/blog/post/#{post.id}?lang=ru" %>" class="news__pic-bg1"></a>
							<span class="news__pic-bg2"></span>
							<img src="<%= "#{post.post_intro.url}" %>" alt="">
						</div>
						<div class="news__body">
							<div class="news__title"><a href="<%= "/blog/post/#{post.id}?lang=ru" %>"><%= post.name_ru %></a></div>
							<div class="news__subtitle"><a href="<%= "/blog/post/#{post.id}?lang=ru" %>"><span class="news__span-pic"></span> admin</a> •<span
									class="news__span-pic-2"></span><%= post.created_at %></div>
							<% if post.text_ru.index("</h2>") %>
								<div class="news__text"><%= sanitize post.text_ru[0..post.text_ru.index("</h2>")+1]+"…" %></div>
							<% elsif post.text_ru.index("</h3>") %>
								<div class="news__text"><%= sanitize post.text_ru[0..post.text_ru.index("</h3>")+1]+"…" %></div>
							<% else %>
								<div class="news__text"><%= sanitize post.text_ru[0..post.text_ru.index("</p>")+1]+"…" %></div>
							<% end %>
					    </div>
					  </div>
					  <% end %>
					<% end %>
				</div>
			</div>
		</main>
	</div>

	<script>
		var strGET = window.location.search.replace( '?', ''); 

		if(strGET != ""){
			if(window.location.href.indexOf('&reloaded') === -1) window.location.href = window.location.href + "&reloaded=true";
		};
	</script>
